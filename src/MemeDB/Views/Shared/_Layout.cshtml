<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <environment names="Development, Staging, Production">
        <link rel="stylesheet" href="http://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.css" />
    </environment>
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">MemeDB</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a asp-action="Genre" asp-route-id="0">Dogs</a></li>
                    <li><a asp-action="Genre" asp-route-id="1">Cats</a></li>
                    <li><a asp-action="Genre" asp-route-id="2">Gifs</a></li>
                    <li><a asp-action="Genre" asp-route-id="3">Reactions</a></li>
                    <li><a asp-action="Genre" asp-route-id="4">Rage Comics</a></li>
                    <li>@await Component.InvokeAsync("LoginLogout")</li>
                </ul>
            </div>
        </div>
    </nav>
   

    <div class="container">
        @RenderBody()        
    </div>
    <footer class="container-fluid text-center">
        MemeDB built by Matt Sarnak 2017 
    </footer>
    <environment names="Development, Staging, Production">
        <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.1.1.js">
        </script>
        <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.js">
        </script>
        <script src="http://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.js">
        </script>
    </environment>
</body>
</html>

