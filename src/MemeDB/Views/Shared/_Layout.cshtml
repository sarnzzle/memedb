<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <environment names="Development, Staging, Production">
        <link rel="stylesheet" href="http://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.css" />
    </environment>
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">MemeDB</a>                
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                    <li><a href="/Home/Genre/0">Dogs</a></li>
                    <li><a href="/Home/Genre/1">Cats</a></li>
                    <li><a href="/Home/Genre/2">Gifs</a></li>
                    <li><a href="/Home/Genre/3">Reactions</a></li>
                    <li><a href="/Home/Genre/4">Rage Comics</a></li>
                    <li class="active"><a href="/Home/Create">Add a Meme</a></li>
                </ul>
                @await Component.InvokeAsync("LoginLogout")                
            </div>
        </div>
    </nav>
   

    <div class="container">
        @RenderBody()        
    </div>
    <footer class="container-fluid text-center">
        <p>
            MemeDB built by Matt Sarnak 2017
        </p>
    </footer>
    <environment names="Development, Staging, Production">
        <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.1.1.js">
        </script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.16.0/additional-methods.js">
        </script>
        <script src="http://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.js">
        </script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    </environment>
</body>
</html>

