@model Meme

@{ 
    ViewBag.Title = $"Edit {Model.Name}";
}

<div>

    

    <div class="panel panel-primary">
        <div class="panel-heading">
            Editing: @Model.Name
        </div>
        <div class="panel-footer">
            <form method="post" asp-antiforgery="true">
                <div class="form-group">
                    <img class="img-responsive" src="@Model.Url" />
                </div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name" />
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input class="form-control" asp-for="Description" />
                    <span asp-validation-for="Description" />
                </div>
                <div class="form-group">
                    <label asp-for="Url"></label>
                    <input class="form-control" asp-for="Url" />
                    <span asp-validation-for="Url" />
                </div>
                <div class="form-group">
                    <label asp-for="Genre" />
                    <select class="form-control" asp-for="Genre" asp-items="@Html.GetEnumSelectList(typeof(Genre))"></select>
                    <span asp-validation-for="Genre" />
                </div>
                <div>
                    <input class="btn btn-primary" type="submit" value="Save!" />
                </div>
            </form>            
        </div>
    </div>

</div>