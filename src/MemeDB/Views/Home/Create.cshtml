@model Meme

@{ 
    ViewBag.Title = "Add a Meme";
}

<div>

    <h1>Add a Meme</h1>

    <div>
        <form method="post" asp-antiforgery="true">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input class="form-control" asp-for="Name" />
                <span asp-validation-for="Name" />
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input class="form-control" asp-for="Description" />
                <span asp-validation-for="Description" />
            </div>
            <div class="form-group">
                <label asp-for="Url"></label>
                <input class="form-control" asp-for="Url" />
                <span asp-validation-for="Url" />
            </div>
            <div class="form-group">
                <label asp-for="Genre" />
                <select class="form-control" asp-for="Genre" asp-items="@Html.GetEnumSelectList(typeof(Genre))"></select>
                <span asp-validation-for="Genre" />
            </div>
            <div>
                <input class="btn btn-primary" type="submit" value="Save!" />
            </div>
        </form>

    </div>

</div>